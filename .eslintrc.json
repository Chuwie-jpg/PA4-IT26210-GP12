{
    "env": {
      "node": true,
      "jest": true,
      "browser": true
    },
    "extends": [
      "eslint:recommended",
      "plugin:react/recommended",
      "plugin:react-hooks/recommended",
      "airbnb"
    ],
    "settings": {
      "react": {
        "version": "detect"
      }
    },
    "parserOptions": {
      "ecmaVersion": 2020,
      "sourceType": "module"
    },
    "plugins": [
      "react",
      "react-hooks"
    ],
    "rules": {
      "no-undef": "off",
      "react/jsx-filename-extension": ["warn", { "extensions": [".js", ".jsx"] }],
      "react/prop-types": "off"
    }
  }
  